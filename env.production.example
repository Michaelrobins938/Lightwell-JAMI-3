# ========================================
# Lightwell Platform - Production Environment
# ========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ========================================
# DATABASE CONFIGURATION
# ========================================
# For development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@host:5432/luna_production"

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate a secure random string for production
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"

# ========================================
# AI SERVICES CONFIGURATION
# ========================================
# OpenRouter API (Recommended for production)
OPENROUTER_API_KEY="sk-or-v1-your-openrouter-api-key-here"
OPENROUTER_API_URL="https://openrouter.ai/api/v1/chat/completions"
OPENROUTER_MODEL="openai/gpt-4o"

# OpenAI API (Alternative)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# ========================================
# STRIPE CONFIGURATION (Optional)
# ========================================
# For payment processing and donations
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret-here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"

# ========================================
# EMAIL CONFIGURATION (Optional)
# ========================================
# For sending emails (password reset, notifications, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password-or-app-password"

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Base URL for your application
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
# For caching and session storage
REDIS_URL="redis://localhost:6379"

# ========================================
# CRISIS INTERVENTION (Optional)
# ========================================
# Emergency contact numbers
CRISIS_HOTLINE_NUMBER="988"
EMERGENCY_CONTACTS=["911", "988", "1-800-273-8255"]

# ========================================
# MONITORING (Optional)
# ========================================
# For error tracking and monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# ========================================
# SECURITY (Optional)
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
CORS_ORIGIN="https://your-domain.com" 